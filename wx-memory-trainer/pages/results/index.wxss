.card-title{font-size:18px;font-weight:600;margin-bottom:6px}
.row-line{display:flex;justify-content:space-between;padding:8px 0;border-bottom:1px solid #f1f5f9}
.row-line:last-child{border-bottom:none}
.overview-line{font-size:13px;color:#475569;margin-bottom:4px}
.stats-grid{display:flex;flex-direction:column;gap:12px}
.stat-item{background:#f8fafc;border-radius:8px;padding:12px;display:flex;flex-direction:column;gap:4px}
.stat-label{font-size:15px;font-weight:600;color:#1f2937}
.stat-text{font-size:12px;color:#475569}
.stat-highlight{font-size:12px;color:#2563eb;font-weight:500}
.stat-detail{font-size:12px;color:#6b7280}
